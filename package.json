{
  "name": "hoconfmt",
  "version": "0.0.0-development",
  "description": "Opinionated HOCON formatter - zero configuration, one way to format",
  "keywords": [
    "hocon",
    "formatter",
    "linter",
    "config",
    "typesafe-config",
    "cli"
  ],
  "homepage": "https://github.com/jojoee/hoconfmt",
  "bugs": {
    "url": "https://github.com/jojoee/hoconfmt/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jojoee/hoconfmt.git"
  },
  "license": "MIT",
  "author": "Nathachai Thongniran <inid3a@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "bin": {
    "hoconfmt": "./bin/hoconfmt.js"
  },
  "files": [
    "dist",
    "bin",
    "src"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:umd && npm run build:types",
    "build:esm": "esbuild src/index.ts --bundle --format=esm --platform=node --outfile=dist/esm/index.js --external:glob",
    "build:cjs": "esbuild src/index.ts --bundle --format=cjs --platform=node --outfile=dist/cjs/index.cjs --external:glob",
    "build:umd": "esbuild src/index.ts --bundle --format=iife --global-name=hoconfmt --outfile=dist/hoconfmt.umd.js",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist/types",
    "build:cli": "esbuild src/cli.ts --bundle --format=esm --platform=node --outfile=bin/hoconfmt.js --external:glob --banner:js='#!/usr/bin/env node'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm run build:cli"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "glob": "^10.3.10",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
